{
  "name": "@fullstacksjs/toolbox",
  "version": "2.9.0",
  "license": "MIT",
  "author": "frontendmonster <frontendmonster@gmail.com>",
  "description": "Common JavaScript utility functions",
  "repository": {
    "type": "git",
    "url": "git@github.com:fullstacksjs/toolbox.git"
  },
  "files": [
    ".husky/prepare",
    ".npmignore",
    ".npmrc",
    "lib/",
    "LICENSE",
    "README.md"
  ],
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "typings": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "sideEffects": false,
  "scripts": {
    "commit": "git-cz",
    "clean": "shx rm -rf lib/*",
    "prebuild": "yarn run clean",
    "build": "tsc --project ./tsconfig.cjs.json && tsc --project ./tsconfig.esm.json && ./fixup",
    "lint": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:ci": "jest --ci --coverage --coverageReporters='text' --coverageReporters='text-summary'",
    "test:watch": "yarn run test --watch",
    "test:coverage": "yarn run test --coverage",
    "prerelease": "yarn run verify",
    "release": "standard-version && npm publish && git push --follow-tags --no-verify",
    "verify": "yarn run lint && yarn run test",
    "prepublishOnly": "pinst --disable && pkg-ok",
    "postpublish": "pinst --enable",
    "prepare": ".husky/prepare",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "15.0.0",
    "@commitlint/config-conventional": "15.0.0",
    "@frontendmonster/builder": "2.2.0",
    "@fullstacksjs/eslint-config": "7.0.3",
    "@fullstacksjs/tsconfig": "0.6.0",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/npm": "8.0.3",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/jest": "27.0.3",
    "@types/node": "16.11.12",
    "commitizen": "4.2.4",
    "cspell": "5.13.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.4.1",
    "husky": "7.0.4",
    "jest": "27.4.3",
    "lint-staged": "12.1.2",
    "pinst": "2.1.6",
    "pkg-ok": "2.3.1",
    "prettier": "2.5.1",
    "semantic-release": "18.0.1",
    "shx": "0.3.3",
    "standard-version": "9.3.2",
    "ts-jest": "27.1.1",
    "typescript": "4.5.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "volta": {
    "node": "16.13.0",
    "yarn": "1.22.17"
  }
}
